<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fond dégradé -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#2E7D32" android:endColor="#4CAF50" android:angle="45" android:type="linear" />
        </shape>
    </item>

    <!-- Logo centré -->
    <item android:gravity="center">
        <bitmap android:gravity="center" android:src="@mipmap/ic_launcher" android:tileMode="disabled" />
    </item>

    <!-- Texte en bas -->
    <item android:gravity="bottom|center_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
